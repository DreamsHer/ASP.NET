                    $("#tTitleOptional").find(".col-sm-6").find("input")[1].readOnly = true;
                } else {
                    $("#tTitleOptional").find(".col-sm-6").find("input")[0].value = "";
                    $("#tTitleOptional").find(".col-sm-6").find("input")[1].value = "";
                    $("#tTitleOptional").find(".col-sm-6").find("input")[0].readOnly = false;
                    $("#tTitleOptional").find(".col-sm-6").find("input")[1].readOnly = false;
                }
            });
        }

        var character = new Array("地址A", "地址B", "地址C", "地址D");

        //添加选项
        function addOptional() {
            var titleTypeId = $("#searchTitleType").val();
            if (titleTypeId != 0 && titleTypeId != 3) {
                var oldOptionalCount = $("#tTitleOptional").find(".col-sm-6").length;
                if (oldOptionalCount < 4) {
                    var strOp = '<div class="col-sm-6"><label class="control-label col-sm-2">' + character[oldOptionalCount] + '、</label><div class="col-sm-11"><textarea id="TextArea1" rows="5" cols="50"></textarea></div></div>';
                    $("#tTitleOptional").append(strOp);
                } else {
                    layer.msg("已经是最后一个选项,不能再添加了哦!", { icon: 0, skin: "layui-layer-molv" });
                }

            } else {
                layer.msg("题目类型不能为空或如果题目类型为判断题也是不能添加选项的哦", { icon: 0, skin: "layui-layer-molv" });
            }
        }

        //移除选项
        function removeOptional() {
            var oldOptionalCount = $("#tTitleOptional").find(".col-sm-6").length;
            if (oldOptionalCount > 2) {
                $("#tTitleOptional").find(".col-sm-6").last().remove();
            } else {
                layer.msg("A、B项不能移除了哦!", { icon: 0, skin: "layui-layer-molv" });
            }
        }


       


    </script>


