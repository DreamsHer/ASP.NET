                var titleTypeId = $("#searchTitleType").val();
                if (titleTypeId == 3) {
                    $("#tTitleOptional").find(".col-sm-6").find("input")[0].value = "对";
                    $("#tTitleOptional").find(".col-sm-6").find("input")[1].value = "错";
