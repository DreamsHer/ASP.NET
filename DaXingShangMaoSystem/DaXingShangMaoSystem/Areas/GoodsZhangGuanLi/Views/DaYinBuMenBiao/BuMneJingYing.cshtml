    <script src="~/Content/jquery.bsgrid-1.37/js/lang/grid.zh-CN.min.js"></script>
    <script src="~/Content/js/customfunction.js"></script>
    <script src="~/Content/layer/layer.js"></script>


    <script>
        $(document).ready(function () {
            //盘点部门
            $.post("/GoodsZhangGuanLi/DaYinBuMenBiao/CaiGouXiaLa", function (data) {
                selectLoadData("BuMenOne", data);
            });

            //盘点部门
            $.post("/GoodsZhangGuanLi/DaYinBuMenBiao/PeiSong", function (data) {
                selectLoadData("JinHuoOne", data);
            });

            //部门
            $.post("/GoodsZhangGuanLi/DaYinBuMenBiao/PeiSongd", function (data) {
                selectLoadData("JinHuoThree", data);
            });

        });

        //部门改变
        $("#BuMenOne").change(function () {
            var spouseBRanchID = $("#BuMenOne").val();
            if (spouseBRanchID > 0) {
                $.post("/GoodsZhangGuanLi/DaYinBuMenBiao/BuMen?DrugTypeID=" + spouseBRanchID, function (data) {
                   
                    selectLoadData("BuMenOtwo", data);
                });
            }
        });
        //配送部门改变
        $("#JinHuoOne").change(function () {
            var spouseBRanchID = $("#JinHuoOne").val();
            if (spouseBRanchID > 0) {
                $.post("/GoodsZhangGuanLi/DaYinBuMenBiao/PeiSonger", function (data) {
                    selectLoadData("JinHuoTwo", data);
                });
            }
        });
        //配送部门改变
        $("#JinHuoThree").change(function () {
            var spouseBRanchID = $("#JinHuoThree").val();
            if (spouseBRanchID > 0) {
                $.post("/GoodsZhangGuanLi/DaYinBuMenBiao/PeiSongdser", function (data) {
                    selectLoadData("JinHuoFour", data);
                });
            }
        });
        //点击关闭
        $("#Colse").click(function () {
            $('body').remove();
        });
        //点击退出body
        $("#SelOutBtn").click(function () {
            $('body').remove();
        });
    </script>


