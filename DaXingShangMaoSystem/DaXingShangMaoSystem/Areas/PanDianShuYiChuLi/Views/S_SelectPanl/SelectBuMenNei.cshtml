
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SelectBuMenNei</title>

    <link href="~/Content/bootstrap-3.3.7-dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/jquery.bsgrid-1.37/merged/bsgrid.all.min.css" rel="stylesheet" />
    <link href="~/Content/jquery.bsgrid-1.37/css/skins/grid_blue.min.css" rel="stylesheet" />

    <style>
        .container {
            background: #fff;
            width: 100%;
        }

        .reset-padding {
            padding: 0 5px;
        }

        .reset {
            padding-left: 2px;
            padding-right: 2px;
        }

        label.Size {
            font-size: 60px;
        }

        label {
            font-weight: normal;
        }
    </style>

</head>
<body>
   
    <div class="container">
        <div class="row">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="form-group">

                        <span class="h4"><b>查询部门库存余额帐</b></span>
                        <div class="pull-right">
                            <button class="form-control btn-sm btn btn-info" id="Colse"><span class="glyphicon glyphicon-remove">关闭</span></button>
                        </div>
                    </div>
                </div>

                <div class="panel panel-body" style="background:#e2dede;">
                    <div class="h4 col-lg-offset-4"><b>查 询 结 果</b></div>
                    <div class="row" style="background:#e5e6e6;">
                        <div class="col-md-1 col-lg-offset-2">
                            <button type="button" class="btn btn-info" id="FanHui">返回<<</button>
                        </div>
                    </div>
                 
                            <div class="row" style="background:#d1cece;">
                                <div class="col-lg-12">
                                    <div class="col-lg-1"></div>
                                    <div class="col-lg-5 col-md-5 col-sm-5 left">
                                        <div class="row">
                                            <div class="form-group">
                                                <div class="col-md-3 col-lg-offset-3">
                                                    <label class="control-label" style="padding-left:60px;">部门：</label>
                                                </div>
                                                <div class="col-md-4" style="padding-left:14px;border-left-width:20px;">
                                                    <div style="border-bottom: #000 1px solid; width: 200px;">
                                                        <input readonly="readonly" id="dermterLeft"  style="width: 200px; border: none; color: #0000FF; background:#d1cece; font-size: 18px;" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row left-titles" id="textContent" style="height:500px;background:#e2dede">
                                            <div class="stem" id="stem">
                                                <table id="YiaoZhengTableLeft" style="margin-top:2px;width:100%;">
                                                    <tr>
                                                        <th w_num="total_line">序号</th>
                                                        <th w_index="PablData">日 期</th>
                                                        <th w_index="departmentCodes">部门代码</th>
                                                        <th w_index="departmentName">部门名称</th>
                                                    </tr>
                                                </table>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-2">
                                                    <button class="btn btn-warning">合计值</button>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    
                                    <div class="col-lg-5 col-md-5 col-sm-5 right">
                                        <div class="row">
                                            <div class="form-group">
                                                <div class="col-md-3 col-lg-offset-3">
                                                    <label class="control-label" style="padding-left:60px;">部门：</label>
                                                </div>
                                                <div class="col-md-4" style="padding-left:14px;border-left-width:20px;">
                                                    <div style="border-bottom: #000 1px solid; width: 200px;">
                                                        <input readonly="readonly" id="dermterright" style="width: 200px; border: none; color: #0000FF;background:#d1cece; font-size: 18px;" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row left-titles" id="textContent" style="height:500px;background:#e2dede;margin-left:2px;">
                                            <div class="stem" id="stem">
                                                <table id="YiaoZhengTablerihgt" style="margin-top:2px;width:100%;">
                                                    <tr>
                                                        <th w_num="total_line">序号</th>
                                                        <th w_index="PablData">日 期</th>
                                                        <th w_index="DrugTypeID" w_hidden="true">部门ID</th>
                                                        <th w_index="">部门代码</th>
                                                        <th w_index="DrugType">部门名称</th>
                                                    </tr>
                                                </table>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-2">
                                                    <button class="btn btn-warning">合计值</button>
                                                </div>
                                            </div>
                                        </div>
                                       
                                    </div>
                                </div>
                            </div>

                     

              
                </div>

            </div>
        </div>
    </div><!--大row-->

    <script src="~/Content/bootstrap-3.3.7-dist/js/jquery-2.0.3.min.js"></script><!--bootstrap-->
    <script src="~/Content/bootstrap-3.3.7-dist/js/jquery-1.11.2.min.js"></script><!--bootstrap-->
    <script src="~/Content/bootstrap-3.3.7-dist/js/bootstrap.min.js"></script><!--bootstrap-->
    <script src="~/Content/jquery.bsgrid-1.37/merged/bsgrid.all.min.js"></script>
    <script src="~/Content/jquery.bsgrid-1.37/js/lang/grid.zh-CN.min.js"></script>
    <script src="~/Content/js/customfunction.js"></script>
    <script src="~/Content/layer/layer.js"></script>


    <script>

        $(document).ready(function () {
            //左
            YiaoZhengTableLeft = $.fn.bsgrid.init('YiaoZhengTableLeft', {
                url: '/PanDianShuYiChuLi/S_SelectPanl/SelecBuMnes',
                autoLoad: false,
                stripeRows: true,
                rowHoverColor: true,
                pageSize: 7,
                pageSizeSelect: false,
                pagingLittleToolbar: true,
                pagingToolbarAlign: "left",
            });
            //YiaoZhengTableLeft.search();

            //右
            YiaoZhengTablerihgt = $.fn.bsgrid.init('YiaoZhengTablerihgt', {
                url: '/PanDianShuYiChuLi/S_SelectPanl/SelecBuMnesright',
                autoLoad: false,
                stripeRows: true,
                rowHoverColor: true,
                pageSize: 7,
                pageSizeSelect: false,
                pagingLittleToolbar: true,
                pagingToolbarAlign: "left",
                event: {//事件
                    customRowEvents: {
                        click: function (record, rowIndex, trObj, options) {//点击事件
                            var dfgghyid = record.DrugTypeID;
                            $.post("/PanDianShuYiChuLi/S_SelectPanl/SelecBuMnesrighght?dfgghyid=" + dfgghyid, function (data) {
                                $("#dermterright").val(data[0].DrugType);
                            });

                        }
                    }
                }
            });
            YiaoZhengTablerihgt.search();

           
            $.post("/PanDianShuYiChuLi/S_SelectPanl/SelectDefrtName", function (data) {
                $("#dermterLeft").val(data[0].departmentName);
            });

        });

        $("#FanHui").click(function () {
            document.location.href = "/PanDianShuYiChuLi/S_SelectPanl/SelectBuMenYuE";
        });

    </script>

</body>
</html>
