
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap-3.3.7-dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/jquery.bsgrid-1.37/merged/bsgrid.all.min.css" rel="stylesheet" />
    <link href="~/Content/jquery.bsgrid-1.37/css/skins/grid_blue.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-3.3.7-dist/css/bootstrap.min.css" rel="stylesheet" />
    <title>HuiYuanKaZuoFei</title>
    <style>
        .container {
            width: 100%;
            height: 500px;
            margin-top: 10px;
            background-color: #f0edf1;
        }

        .panel-heading {
            font-size: 16px;
        }

        .HXorKLX {
            width: 100%;
            height: 50px;
            border: 1px solid #f0edf1;
        }

        .HuiYuamxingming {
            float: left;
            margin-top: 20px;
        }

        .KLX {
            float: left;
            margin-left: 350px;
            margin-top: 5px;
        }

        .zkl {
            float: left;
        }

        .Jqzkk {
            float: left;
        }

        .san {
            width: 100%;
            height: 30px;
            border: 1px solid #f0edf1;
            margin-top: 10px;
        }

        .Sanniu {
            float: left;
        }

        .jinE {
            float: left;
            margin-left: 150px;
        }

        .zhaiyao {
            float: left;
            margin-left: 150px;
        }

        .BiaoGe {
            margin-top: 10px;
            width: 100%;
            height: 150px;
            background-color: white;
            border: 1px solid #0ff;
        }

        .djr {
            float: left;
            margin-left: 90px;
        }

        .djsj {
            float: left;
            margin-left: 90px;
        }

        .shr {
            margin-left: 810px;
        }

        .shsj {
            float: left;
            margin-left: 500px;
        }

        .XS {
            width: 100%;
            height: 70px;
            border: 1px solid #f0edf1;
            margin-top: 5px;
        }

        .AN {
            width: 100%;
            height: 20px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="panel panel-primary">
            <div class="panel-heading">
                会 员 卡 作 废
            </div>
        </div>
        <div>
            <button id="btnXuanZeHeTong">记 录 编 号</button>
            <input id="JiLuBianHao" name="JiLuBianHao" />
        </div>
        <div class="HXorKLX">
            <div class="HuiYuamxingming">
                <label>会 员 姓 名</label>
                <input id="HuiYuanXinMing" name="HuiYuanXinMing" />
            </div>
            <div class="KLX">
                <div>卡 类 型</div>
                <div class="zkl">
                    <select data-rule-required="true" id="KaFengLei" name="KaFengLei" style="width:150px">
                        <option></option>
                    </select>
                </div>
                <div class="Jqzkk">
                    <select data-rule-required="true" id="KaZhongLei" name="KaZhongLei" style="width:150px">
                        <option></option>
                    </select>
                </div>
            </div>
        </div>
        <div class=" san">
            <div class="Sanniu">
                <button onclick="Tianjian()">
                    <span class="glyphicon glyphicon-file"></span>添 加 卡 片
                </button>
                <button id="doDelete">
                    <span class="glyphicon glyphicon-trash"></span>删 除 卡 片
                </button>
            </div>
            <div class="jinE">
                <label>金 额</label>
                <input id="Amount" name="Amount" />
            </div>
            <div class=" zhaiyao">
                <label>摘 要</label>
                <input id="ZhaiYao" name="ZhaiYao" />
            </div>
        </div>
        <div class="BiaoGe">
            <table id="HuiYuanKaCuoFeiBiao" class="table table-bordered table-condensed table-hover table-responsive table-striped">
                <tr>
                    <th w_num="total_line"></th>
                    <th w_index="CardCode">会员卡代码</th>
                    <th w_index="Ccustodian">姓名</th>
                    <th w_index="CredentialsNumber">证件代码</th>
                    <th w_index="GrandTotalAmount">累计消费金额</th>
                    <th w_index="Sum">余额</th>
                </tr>
            </table>
        </div>
        <div class="XS">
            <div class="djr">
                登记人
                <a class="btn btn-link" href="#">
                    <i class="icon-plus-sign bigger-120 green"></i>
                    林永好
                </a>
            </div>
            <div class="shr">
                审核人
                <a class="btn btn-link" href="#">
                    <i class="icon-plus-sign bigger-120 green"></i>
                    林永好
                </a>
            </div>
            <div class="djsj">
                登记时间
                <a class="btn btn-link" href="#">
                    <i class="icon-plus-sign bigger-120 green"></i>
                    2016.05.17 17:07:28
                </a>
            </div>
            <div class="shsj">
                审核时间
                <a class="btn btn-link" href="#">
                    <i class="icon-plus-sign bigger-120 green"></i>
                    2016.05.17
                </a>
            </div>
        </div>
        <div class=" AN">
            <button id="BtnInsert">
                <span class="glyphicon glyphicon-file"></span>添 加
            </button>
            <button style="color:gainsboro">
                <span class="glyphicon glyphicon-edit"></span>修 改
            </button>
            <button style="color:gainsboro">
                <span class="glyphicon glyphicon-trash"></span>删 除
            </button>
            <button style="color:gainsboro">
                <span class="glyphicon glyphicon-scale"></span>保 存
            </button>
            <button style="color:gainsboro">
                <span class="glyphicon glyphicon-console"></span>放 弃
            </button>
            <button style="color:gainsboro">
                <span class="glyphicon glyphicon-ok"></span>审 核
            </button>
            <button>
                <span class="glyphicon glyphicon-menu-hamburger"></span>退 出
            </button>
        </div>
        <div class="row">
            @*新增员信息信息 模态窗体*@
            <div class="modal bs-example-modal-sm" id="modBaseInfor">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                            <h4 class="modal-title"><span class="glyphicon glyphicon-th-list"></span>卡片信息</h4>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label class="control-label">会员卡代码</label>
                                <input id="TJMemberAgeA" type="text" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">姓名</label>
                                <input id="TJMemberAgeB" type="text" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">证件号码</label>
                                <input id="TJMemberAgeC" type="text" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">累计消费金额</label>
                                <input id="TJMemberAgeD" type="text" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">余额</label>
                                <input id="TJMemberAgeE" type="text" class="form-control" />
                            </div>
                            <div class="form-group btn-group">
                                <button id="BtnAdd" type="button" class="btn btn-primary" style="display:block" onclick="BaoCun()">保存</button>
                                <button type="button" class="btn btn-danger" data-dismiss="modal">关闭</button>
                            </div>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->
        </div>
    </div>
    <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" id="tianxiehetongxinxi">
        <div class="modal-dialog">
            <div class="modal-content" style="width:760px;height:350px;">
                <div class="modal-header" style="background:#a8d7ef;">
                    <span>会员建卡信息</span>
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                </div>
                <div class="modal-body" style="background:#eddddd;">
                    <div class="" style="width:100%;height:330px; background:#f0edf1;">
                        <div class="" style="width:100%;height:280px;overflow:auto;">
                            <table id="tabHeTongXinXi" style="margin-top:2px;width:100%;" class="table">
                                <tr>
                                    <th w_index="JiLuBianHao">记录编号</th>
                                    <th w_index="HuiYuanXinMing">会员姓名</th>
                                    <th w_index="Amount">金额</th>
                                    <th w_index="ZhaiYao">摘要</th>
                                </tr>
                            </table>
                        </div>
                        <div style="text-align:center">
                            <button type="button" class="btn btn-danger" id="btnHeTongXuanZe">
                                选择信息
                            </button>
                            <button type="button" class="btn btn-primary" id="btnDetlete">
                                删 除
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/bootstrap-3.3.7-dist/js/jquery-2.0.3.min.js"></script>
    <script src="~/Content/bootstrap-3.3.7-dist/js/bootstrap.min.js"></script>
    <script src="~/Content/jquery.bsgrid-1.37/merged/bsgrid.all.min.js"></script>
    <script src="~/Content/jquery.bsgrid-1.37/js/lang/grid.zh-CN.min.js"></script>
    <script src="~/Content/js/customfunction.js"></script>
    <script src="~/Content/layer/layer.js"></script>
    <script>
        var HuiYuanKaCuoFeiBiao;//会员卡作废表
       $(document).ready(function () {
            //初始化表格
            HuiYuanKaCuoFeiBiao = $.fn.bsgrid.init('HuiYuanKaCuoFeiBiao', {
                url: '/HuiYuanKaXinXiGuanLi/HuiYuanKaZuoFei/InsertMembershipCardInfo',
                autoLoad: true,
                stripeRows: true,//隔行变色
                rowHoverColor: true,//划过行变色
                displayBlankRows: false,//是否显示空白行，默认值false
                pageSize: 10,
                pageSizeSelect: false,//是否选择分页页数下拉框
                pagingLittleToolbar: true,//精简的图标按钮分页工具条
                event: {
                    customRowEvents: {
                        click: function (record, rowIndex, trObj, options) {
                            if (record != null) {
                                MembershipCardInfoId = record.MembershipCardInfoID;
                            }
                        }
                    }
                }
            });
        });
        $(function () {
            $.post("/HuiYuanKaKuCunKaGuanLi/HuiYuanKuCunKaZuoFei/SelectHuiLeiXi", function (data) {
                selectLoadData("KaFengLei", data)
            });
            $.post("/HuiYuanKaKuCunKaGuanLi/HuiYuanKuCunKaZuoFei/SelectHuiKaZhong", function (data) {
                selectLoadData("KaZhongLei", data)
            });
        });
        //点击按钮弹出新增窗体
        function Tianjian() {
            document.getElementById("BtnAdd").style.display = "block";//控制按钮显示
            document.getElementById("TJMemberAgeA").value = "";//清空文本数据
            document.getElementById("TJMemberAgeB").value = "";
            document.getElementById("TJMemberAgeC").value = "";
            document.getElementById("TJMemberAgeD").value = "";
            document.getElementById("TJMemberAgeE").value = "";
            $("#modBaseInfor").modal("show");//弹出新增窗体
        }
        //新增保存按钮
        function BaoCun() {
            encodeURI();//不过滤￥%
            var A = encodeURI(document.getElementById("TJMemberAgeA").value.trim());//
            var B = document.getElementById("TJMemberAgeB").value.trim();
            var C = document.getElementById("TJMemberAgeC").value.trim();
            var D = document.getElementById("TJMemberAgeD").value.trim();
            var E = document.getElementById("TJMemberAgeE").value.trim();
            $.getJSON("/HuiYuanKaXinXiGuanLi/HuiYuanKaZuoFei/InsertStore?CardCode=" + A + "&Ccustodian=" + B + "&CredentialsNumber=" + C + "&GrandTotalAmount=" + D + "&Sum=" + E, function (data) {
                if (data == "ok") {
                    location.reload();//刷新页面
                }
            });
        }
        $(function () {
            //信息的选择
            $("#btnXuanZeHeTong").click(function () {
                tabHeTongXinXi = $.fn.bsgrid.init('tabHeTongXinXi', {
                    url: '/HuiYuanKaXinXiGuanLi/HuiYuanKaZuoFei/SelectCXSummary',
                    autoLoad: false,
                    stripeRows: true,//隔行变色
                    rowHoverColor: true,//划过行变色
                    pageSize: 20,
                    pageSizeSelect: false,//是否选择分页页数下拉框
                    pagingLittleToolbar: true,//精简的图标按钮分页工具条
                    pagingToolbarAlign: "left",//分页工具条的显示位置
                    displayPagingToolbarOnlyMultiPages: true,//仅当多页时才显示分页工具条
                    event: {
                        customRowEvents: { //record 记录记载  options 选项
                            click: function (record, rowIndex, trObj, options) {
                                if (record != null) {
                                    CXSummaryID = record.CXSummaryID;
                                }
                            }
                        }
                    }
                });
                tabHeTongXinXi.refreshPage();
                $("#tianxiehetongxinxi").modal('show');
            });
            //获取信息
            $("#btnHeTongXuanZe").click(function () {
                var rowIndex = tabHeTongXinXi.getSelectedRowIndex();
                if (rowIndex > -1) {
                    var CXSummaryID = tabHeTongXinXi.getColumnValue(rowIndex, "CXSummaryID");
                    $.getJSON("/HuiYuanKaXinXiGuanLi/HuiYuanKaZuoFei/SelectHuoQuKaXinXi?HTID=" + CXSummaryID, function (data) {
                        if (data == "失败") {
                            alert("你没有选择信息");
                        }
                        else {
                            $("#CXSummaryID").val(data.CXSummaryID);//隐藏域
                            $("#JiLuBianHao").val(data.JiLuBianHao);
                            $("#HuiYuanXinMing").val(data.HuiYuanXinMing);
                            $("#Amount").val(data.Amount);
                            $("#ZhaiYao").val(data.ZhaiYao);
                        }
                        $("#tianxiehetongxinxi").modal('hide');
                    });
                }
                else {
                    alert("请选择一条的信息");
                }
            });
        });
        //删除表
        $("#doDelete").click(function () {
            var selectRowIndex = HuiYuanKaCuoFeiBiao.getSelectedRowIndex();//获取选中行的索引值
            if (selectRowIndex >= 0) {
                layer.confirm("您确定到删除该信息？", {
                    icon: 3,
                    btn: ['确定', '取消']
                    //按钮
                }, function (layerIndex) {
                    layer.close(layerIndex);//关闭提示框
                    var MembershipCardInfoId = HuiYuanKaCuoFeiBiao.getColumnValue(selectRowIndex, "MembershipCardInfoID");//获取选中行的id
                    //删除年龄表
                    $.post("/HuiYuanKaXinXiGuanLi/HuiYuanKaZuoFei/DeleteMembershipCardInfo",
                        { MembershipCardInfoId: MembershipCardInfoId }, function (msg) {
                            if (msg == "success") {
                                layer.alert("删除成功！", { icon: 1, title: '提示' });
                                //刷新table
                                HuiYuanKaCuoFeiBiao.refreshPage();
                            }
                            else {
                                layer.alert("删除失败", { icon: 2, title: '提示' });
                            }
                        });
                });
            }
            else {
                layer.alert("请选择需要删除的数据", { icon: 0, title: '提示' });
            }
        });

        $("#BtnInsert").click(function () {
            var JiLuBianHao = $("#JiLuBianHao").val();
            var HuiYuanXinMing = $("#HuiYuanXinMing").val();
            var Amount = $("#Amount").val();
            var ZhaiYao = $("#ZhaiYao").val();
            if (JiLuBianHao != '' && HuiYuanXinMing != '' && Amount != '' && ZhaiYao != '') {
                $.post("/HuiYuanKaXinXiGuanLi/HuiYuanKaZuoFei/BtnInsert", {
                    JiLuBianHao: JiLuBianHao,
                    HuiYuanXinMing: HuiYuanXinMing,
                    Amount: Amount,
                    ZhaiYao: ZhaiYao
                }, function (data) {
                    if (data == "success") {
                        layer.alert('添加成功'), { icon: 1, title: '提示' };
                    }
                    else {
                        layer.alert('添加失败'), { icon: 1, title: '提示' };
                    }
                });
            } else {
                layer.alert('请输入数据', { icon: 3, title: '提示' });
            }
        });
        //删除信息
        $("#btnDetlete").click(function () {
            var selectRowIndex = tabHeTongXinXi.getSelectedRowIndex();//获取选中行的索引值
            if (selectRowIndex >= 0) {
                layer.confirm("您确定到删除该信息？", {
                    icon: 3,
                    btn: ['确定', '取消']
                    //按钮
                }, function (layerIndex) {
                    layer.close(layerIndex);//关闭提示框
                    var CXSummaryId = tabHeTongXinXi.getColumnValue(selectRowIndex, "CXSummaryID");//获取选中行的id
                    //删除年龄表
                    $.post("/HuiYuanKaXinXiGuanLi/HuiYuanKaZuoFei/DeleteCXSummar",
                        { CXSummaryId: CXSummaryId }, function (msg) {
                            if (msg == "success") {
                                layer.alert("删除成功！", { icon: 1, title: '提示' });
                                //刷新table
                                tabHeTongXinXi.refreshPage();
                            }
                            else {
                                layer.alert("删除失败", { icon: 2, title: '提示' });
                            }
                        });
                });
            }
            else {
                layer.alert("请选择需要删除的数据", { icon: 0, title: '提示' });
            }
        });
    </script>
</body>
</html>
