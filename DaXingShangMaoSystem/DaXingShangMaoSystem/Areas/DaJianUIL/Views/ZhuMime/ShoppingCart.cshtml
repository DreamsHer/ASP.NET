      color: #F00;
    }

        .search {
            width: 600px;
            height: 40px;
            position: absolute;
            margin-top: -94px;
            margin-left: 525px;
        }
        .search input {
           width: 500px;
           height: 40px;
           border: 3px solid #ff4200;
           border-right: none;
           font-size: 20px;
      }
         .search a {
                float: right;
                width: 97px;
                height: 40px;
                background: #ff4200;
                text-decoration: none;
                color: #fff;
                font-size: 24px;
                text-align: center;
                line-height: 40px;
            }
        .search .bginput {
                background: url(../imges/search.png) no-repeat left center;
