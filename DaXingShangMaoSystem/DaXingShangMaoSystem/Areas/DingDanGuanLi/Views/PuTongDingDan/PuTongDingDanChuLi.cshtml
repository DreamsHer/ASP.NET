                            <div class="col-md-2 col-sm-1 reset">
                                <input type="text" class="form-control" name="ValueTotal" id="ValueTotal"
                                       onkeyup="value=value.replace(/[^\d\.]/g,'')">
                            </div>
                            <label class="col-md-1 col-sm-1 control-label reset">备注</label>
                            <div class="col-md-2 col-sm-1 reset">
                                <input type="text" class="form-control" name="Remarks" id="Remarks2">
                            </div>
                        </div>
                        <div class="form-group" style="margin-top:5px;">
                            <label class="col-md-1 col-sm-1 control-label reset">订货时间</label>
                            <div class="col-md-2 col-sm-1 reset">
                                <input type="date" class="form-control" name="ReleaseTimeStrrr" id="ReleaseTimeStrrr">
                            </div>
                            <label class="col-md-1 col-sm-1 control-label reset">登记人</label>
                            <div class="col-md-2 col-sm-1 reset">
                                <input type="text" class="form-control" name="Register" id="Register">
                            </div>
                            <label class="col-md-1 col-sm-1 control-label reset">登记时间</label>
                            <div class="col-md-2 col-sm-1 reset">
                                <input type="date" class="form-control" name="ReleaseTimeStrf" id="ReleaseTimeStrf">
                            </div>
                            <div class="col-md-2 col-sm-1 reset" style="margin-left:40px;">
                                <input id="ConsigneeNot2" name="ConsigneeNot" type="checkbox" value="false" />订单审核否
                            </div>
                        </div>
                        <div class="form-group" style="margin-top:10px;">
                            <label class="col-md-1 col-sm-1 control-label reset">审核人</label>
                            <div class="col-md-2 col-sm-1 reset">
                                <input type="text" class="form-control" name="CheckRen" id="CheckRen">
                            </div>
                            <label class="col-md-1 col-sm-1 control-label reset">审核时间</label>
                            <div class="col-md-2 col-sm-1 reset">
                                <input type="date" class="form-control" name="ReleaseTimeStrd" id="ReleaseTimeStrd">
                            </div>
                            <label class="col-md-1 col-sm-1 control-label reset">订货单情况</label>
                            <div class="col-md-2 col-sm-1 reset">
                                <input type="text" class="form-control" name="ShiFouShouHuo" id="ShiFouShouHuo" readonly>
                            </div>
                        </div>
                        <div class="form-group" style="margin-top:30px;">
                            <div class="col-sm-1 col-md-offset-3">
                                <button type="button" class="btn btn-success form-control" id="btnXinZeng">新增保存</button>
                            </div>
                            <div class="col-sm-1">
                                <button type="button" class="btn btn-primary form-control" id="btnDingDan">查询订单</button>
                            </div>
                            <div class="col-sm-1">
                                <button type="button" class="btn btn-info form-control" id="btnXiuGai">修改删除</button>
                            </div>
                            <div class="col-sm-1">
                                <button type="button" class="btn btn-success form-control" id="btnBaoCun">修改保存</button>
                            </div>
                            <div class="col-sm-1">
                                <button type="button" class="btn btn-warning form-control" id="btnFangQi">放弃编辑</button>
                            </div>
                            <div class="col-sm-1">
                                <button type="button" class="btn btn-danger form-control" id="btnTuiChu">退出界面</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

