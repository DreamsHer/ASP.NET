                            <div class="col-md-2 col-sm-1 reset">
                                <input type="text" class="form-control" name="Subdivision" id="Subdivision2">
                            </div>
                            <label class="col-md-1 col-sm-1 control-label reset">物扣数量</label>
                            <div class="col-md-2 col-sm-1 reset">
                                <input type="text" class="form-control" name="Quantity" id="Quantity2">
                            </div>
                        </div>
                        <div class="form-group" style="margin-top:5px;">
                            <label class="col-md-1 col-sm-1 control-label reset">付款金额</label>
                            <div class="col-md-2 col-sm-1 reset">
                                <input type="text" class="form-control" name="Value" id="Value"
                                       onkeyup="value=value.replace(/[^\d\.]/g,'')">
                            </div>
