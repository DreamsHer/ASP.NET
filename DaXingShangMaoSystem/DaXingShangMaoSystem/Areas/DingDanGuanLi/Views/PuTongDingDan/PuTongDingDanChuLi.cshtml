<body>
    <div class="container">
        <div class="row" id="dingdanchuli">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <span style="padding-left:14px;">订货清单处理</span>
                    </div>
                </div>
                <div class="panel-body" style="width:100%;height:550px;background:#f0edf1">
                    <form class="form-horizontal" role="form">
                        <div class="form-group" style="margin-top:15px;">
                            <input type="hidden" name="OrderFormPactID" id="OrderFormPactID2" />
                            <input type="hidden" id="GoodsID2" name="GoodsID" />
                            <div class="col-md-1" style="margin-top:2px;">
                                <button type="button" class="btn form-control" style="background:#d1cccc;" id="btnShangPinMingCheng">
                                    商品名称
                                </button>
                            </div>
                            <div class="col-md-2 col-sm-1 reset">
                                <input type="text" class="form-control" name="GoodsName" id="GoodsName" readonly>
                            </div>
                            <label class="col-md-1 col-sm-1 control-label reset">商品代码</label>
                            <div class="col-md-2 col-sm-1 reset">
                                <input type="text" class="form-control" name="GoodsCode" id="GoodsCode" readonly>
                            </div>
                            <label class="col-md-1 col-sm-1 control-label reset">商品条码</label>
                            <div class="col-md-2 col-sm-1 reset">
                                <input type="text" class="form-control" name="GoodsTiaoMa" id="GoodsTiaoMa" readonly>
                            </div>
                            <label class="col-md-1 col-sm-1 control-label reset">进项税率</label>
                            <div class="col-md-2 col-sm-1 reset">
                                <input type="text" class="form-control" name="AdvanceCess" id="AdvanceCess" readonly>
                            </div>
                        </div>
                        <div class="form-group" style="margin-top:5px;">
                            <label class="col-md-1 col-sm-1 control-label reset">零售单价</label>
                            <div class="col-md-2 col-sm-1 reset">
                                <input type="text" class="form-control" name="RetailMonovalent" id="RetailMonovalent" readonly>
                            </div>
                            <label class="col-md-1 col-sm-1 control-label reset">不含税进价</label>
                            <div class="col-md-2 col-sm-1 reset">
                                <input type="text" class="form-control" name="NoAdvanceBid" id="NoAdvanceBid" readonly>
                            </div>
                            <label class="col-md-1 col-sm-1 control-label reset">含税进价</label>
                            <div class="col-md-2 col-sm-1 reset">
                                <input type="text" class="form-control" name="AdvanceBid" id="AdvanceBid" readonly>
                            </div>
                            <label class="col-md-1 col-sm-1 control-label reset">包装含量</label>
                            <div class="col-md-2 col-sm-1 reset">
                                <input type="text" class="form-control" name="PackContent" id="PackContent" readonly>
                            </div>
                        </div>
                        <div class="form-group" style="margin-top:15px;">
                            <div class="col-md-1" style="margin-top:2px;">
                                <button type="button" class="btn form-control" style="background:#d1cccc;" id="btnXuanZeHeTong">
                                    合同号
                                </button>
                            </div>
                            <div class="col-md-2 col-sm-1 reset">
                                <input type="text" class="form-control" name="ContractNumber" id="ContractNumber" readonly>
                            </div>
                            <label class="col-md-1 col-sm-1 control-label reset">结算方法</label>
                            <div class="col-md-2 col-sm-1 reset">
                                <input type="text" class="form-control" name="MethodOfSettlingAccounts" id="MethodOfSettlingAccountsID" readonly>
                            </div>
                            <label class="col-md-1 col-sm-1 control-label reset">核算方式</label>
                            <div class="col-md-2 col-sm-1 reset">
                                <input type="text" class="form-control" name="AdjustAccountsFashion" id="AdjustAccountsFashionID" readonly>
                            </div>
