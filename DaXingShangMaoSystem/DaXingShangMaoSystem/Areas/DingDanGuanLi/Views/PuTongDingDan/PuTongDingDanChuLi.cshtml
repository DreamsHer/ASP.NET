    @*加载页面、下拉框*@
    <script type="text/javascript">
        var tabShangPinXinXi;
        //加载页面
        $(document).ready(function () {
            //记录编号
            $.getJSON("/DingDanGuanLi/PuTongDingDan/SelectOrderNumber", function (data) {
                $("#OrderNumber").val(data);
            });
            //进货部门
            $.post("/DingDanGuanLi/PuTongDingDan/SelectSpouseBRanchID", function (data) {
                selectLoadData("SpouseBRanchID", data);
            });
            //订单类型
            $.post("/DingDanGuanLi/PuTongDingDan/SelectOrderFormTypeID", function (data) {
                selectLoadData("OrderFormTypeID", data);
            });
        });

        //选择商品信息
        $(function () {
            tabXuanZeShangPin = $.fn.bsgrid.init('tabXuanZeShangPin', {
                url: '/DingDanGuanLi/PuTongDingDan/SelectShangPinXinXi',
                autoLoad: false,
                stripeRows: true,//隔行变色
                rowHoverColor: true,//划过行变色
                pageSize: 10,
                pageSizeSelect: false,//是否选择分页页数下拉框
                pagingLittleToolbar: true,//精简的图标按钮分页工具条
                pagingToolbarAlign: "left",//分页工具条的显示位置
                event: {
                    customRowEvents: { //record 记录记载  options 选项
                        click: function (record, rowIndex, trObj, options) {
                            IdGoodsID = record.GoodsID

                            if (IdGoodsID > 0) {
                                //获取合同信息
                                var rowIndex = tabXuanZeShangPin.getSelectedRowIndex();
