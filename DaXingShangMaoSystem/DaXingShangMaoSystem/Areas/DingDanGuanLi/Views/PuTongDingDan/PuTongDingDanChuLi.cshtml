                            <div class="col-md-2 col-sm-1 reset">
                                <input type="text" class="form-control" name="SupplierName" id="SupplierID" readonly>
                            </div>
                        </div>
                        <div class="form-group" style="margin-top:5px;">
                            <label class="col-md-1 col-sm-1 control-label reset">买手</label>
                            <div class="col-md-2 col-sm-1 reset">
                                <input type="text" class="form-control" name="PurchasingAgent" id="PurchasingAgent2" readonly>
                            </div>
                            <label class="col-md-1 col-sm-1 control-label reset">有效期</label>
                            <div class="col-md-2 col-sm-1 reset">
                                <input type="date" class="form-control" name="ReleaseTimeStr" id="ReleaseTimeStr" readonly>
                            </div>
